button.sk-btn
  border 0
  // padding 0.4rem 1.07rem
  padding .375rem .75rem
  color #fff
  font-size 1rem
  line-height 1.5
  background #5F8EA8
  border-radius 5px
  font-family fontFamily
  // display inline-flex
  // justify-content center
  // align-items center
  &.btn-sm
    font-size .875rem
    padding .25rem .5rem
  &:focus
    outline 0
  &:hover
    background-image: linear-gradient(rgba(0,0,0,.1),rgba(0,0,0,.1));
  &.disabled
  &[disabled]
    background-image: linear-gradient(rgba(255,255,255,.7),rgba(255,255,255,.7));
    cursor default

  &.sk-btn-primary
    background-color #5F8EA8
  &.sk-btn-secondary
    background-color #92AAB7
  &.sk-btn-redbrown
    background-color #77250C
  &.sk-btn-danger
    background-color #CB4426
  &.sk-btn-brown
    background-color #CC945C
    &.disabled
    &[disabled]
      background-color #eaeaea
      background-image: linear-gradient(rgba(234,234,234,1),rgba(234,234,234,1));
  &.sk-btn-fade
    background-color #E0E0E0
  &.sk-btn-gray
    background-color #777777
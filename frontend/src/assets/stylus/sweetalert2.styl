.mymodal-container
  &.swal2-container
    &.swal2-backdrop-show
      background: rgba(0,0,0,.04);

  .swal2-popup
    background-color #fff
    border: 1px solid #5F8EA8;
    box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.25);
    border-radius: 5px;
    padding 1.25rem

  .swal2-close
    &:focus
      outline 0
    background-color #EFEFEF
    border-radius 5px
    width 35px
    height 35px
    margin-top 10px
    margin-right 10px
    color #777

  .swal2-title
    // font-size 2.28rem
    font-size 1.14rem
    color #777
    font-weight 400

  .swal2-html-container
    // font-size 1.14rem
    font-size 1rem
    color #777

